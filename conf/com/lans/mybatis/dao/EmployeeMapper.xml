<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lans.mybatis.dao.EmployeeMapper">
	<select id="getEmpById" resultType="employee" databaseId="mysql">
		select id, last_name, email, gender from employee where id = #{id}
	</select>
	<select id="getEmpById" resultType="employee" databaseId="oracle">
		select empno id, ename lastName from employee where empno=#{id}
	</select>
	<insert id="addEmp" parameterType="employee">
		insert into employee (last_name,email,gender) values (#{lastName},#{email},#{gender})
	</insert>
	<update id="updateEmp" parameterType="employee">
		update employee set last_name=#{lastName},email=#{email},gender=#{gender} where id=#{id}
	</update>
	<delete id="deleteEmp" parameterType="Integer">
		delete from employee where id=#{id}
	</delete>
	
</mapper>